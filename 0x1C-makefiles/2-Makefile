CC=gcc
SRC=school.c main.c
OBJ=$(SRC:.c=.o)
NAME=school

all: $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

# all object files (.o) depend on their .c files
# so before finishing the "all@ rule, make checks $OBJ
#(OBJ): $(SRC)
#	$(CC) -c $(SRC)

school.o: school.c
	$(CC) -c -o school.o school.c

main.o: main.c
	$(CC) -c -o main.o main.c
